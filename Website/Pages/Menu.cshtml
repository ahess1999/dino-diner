@page
@model Website.Pages.MenuModel
@{
    ViewData["Title"] = "Menu";
}

<h1>Menu</h1>
<h2>Combos</h2>
@for (int i = 0; i < Model.Menu.AvailableCombos.Count; i++)
{
    <div class="menu-item">
        <p>@(Model.Menu.AvailableCombos[i].ToString())</p>
        <p>$ @Model.Menu.AvailableCombos[i].Price</p>
        <p>@Model.Menu.AvailableCombos[i].Calories Calories</p>
        @for (int j = 0; j < Model.Menu.AvailableCombos[i].Ingredients.Count; j++)
        {
            <p>@Model.Menu.AvailableCombos[i].Ingredients[j]</p>
        }
    </div>
}
